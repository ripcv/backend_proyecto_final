<div class="formContainer">
   <div class="resetPassword">
     <h2 class="h2title">Recuperear Contraseña</h2>
<form class="resetForm" action="/api/sessions/reset_password" method="POST">
  <label class="labelForm" for="email">Email:</label>
  <input class="inputForm" type="email" name="email" required />

  <button class="btnForm" type="submit">Recuperar Contraseña</button>
</form>
   </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

   <script>
        document.addEventListener('DOMContentLoaded', function () {
            const errorMessage = '{{messages.error}}';
            if (errorMessage) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: errorMessage,
                });
            }
        });
    </script>
