{{> userinfo}}
<div class="userForm">

<h1>Editar Usuario</h1>
<form id="userForm">
  <label for="first_name">Nombre:</label>
  <input type="text" id="first_name" name="first_name" value="{{viewUser.first_name}}" required />

  <label for="last_name">Apellido:</label>
  <input type="text" id="last_name" name="last_name" value="{{viewUser.last_name}}" required />

  <label for="email">Email:</label>
  <input type="email" id="email" name="email" value="{{viewUser.email}}" disabled />

  <label for="age">Edad:</label>
  <input type="number" id="age" name="age" value="{{viewUser.age}}" required />

  <label for="role">Rol:</label>
  
  <select id="role" name="role" required>
  <option value="user" {{#eq viewUser.role 'user'}}selected{{/eq}}>Usuario</option>
  <option value="admin" {{#eq viewUser.role 'admin'}}selected{{/eq}}>Administrador</option>
   <option value="premium" {{#eq viewUser.role 'premium'}}selected{{/eq}}>Premium</option>
</select>


  <button type="submit">Guardar Cambios</button>
</form>
</div>
