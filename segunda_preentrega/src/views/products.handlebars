<div>
    <h1>Productos</h1>

    <h5>Categorias para Filtrar</h5>
    <div class="categories" style="display:flex; margin_right:10px"> 
        
        {{#each categories}}
     <p style="margin-right:10px; border:1px solid black">
        {{this}}</p>
    {{/each}}</div>
    <table>
        <thead>
            <th>Titulo</th>
            <th>Descripci√≥n</th>
            <th>Precio</th>
            <th>Thumbnail</th>
            <th>Category</th>
            <th>Code</th>
            <th>Stock</th>
        </thead>
        <tbody>
            {{#each products.docs}}
            <tr>
            <td>{{this.title}}</td>
            <td>{{this.description}}</td>
            <td>{{this.price}}</td>
            <td>{{this.thumbnail}}</td>
            <td>{{this.category}}</td>
            <td>{{this.code}}</td>
            <td>{{this.stock}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
      <div class="pagination" style="text-align: center;">
        {{#if products.hasPrevPage}}
            <a href="/api/products?limit={{products.limit}}&page={{products.prevPage}}{{#if products.sort}}&sort={{products.sort}}{{/if}}{{#if products.query}}&query={{products.query}}{{/if}}">Anterior</a>
        {{/if}}
        &nbsp;&nbsp;
        {{#if products.hasNextPage}}
            <a href="/api/products?limit={{products.limit}}&page={{products.nextPage}}{{#if products.sort}}&sort={{products.sort}}{{/if}}{{#if products.query}}&query={{products.query}}{{/if}}">Siguiente</a>
        {{/if}}
    </div>
</div>