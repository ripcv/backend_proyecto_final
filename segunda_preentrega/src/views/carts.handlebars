<div>
    <h1>Carrito<span> {{cid}}</span></h1>
    
    <table>
        <thead>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Precio</th>
        </thead>
        <tbody>
            {{#each cart.products}}
            <tr>
            <td>{{this.product.title}}</td>
            <td>{{this.quantity}}</td>
            <td>{{this.product.price}}</td>
            {{/each}}
            
        </tbody>
        <th>Total <td>{{cart.total}}</td></tr></td>
    </table>
</div>